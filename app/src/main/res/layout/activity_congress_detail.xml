<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_main_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="first name"
        app:layout_constraintBottom_toTopOf="@+id/button_main_lastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_main_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="last name"
        app:layout_constraintBottom_toTopOf="@+id/button_main_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_main_firstName" />

    <Button
        android:id="@+id/button_main_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone number"
        app:layout_constraintBottom_toTopOf="@+id/button_main_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_main_lastName" />

    <Button
        android:id="@+id/button_main_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="facebook account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_main_phone" />
</androidx.constraintlayout.widget.ConstraintLayout>